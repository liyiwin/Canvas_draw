<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/drawArc_rb"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="扇形" />

        <RadioButton
            android:id="@+id/drawCircle_rb"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="圓" />

        <RadioButton
            android:id="@+id/drawOval_rb"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="橢圓" />

        <RadioButton
            android:id="@+id/drawPoint_rb"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="點" />

        <RadioButton
            android:id="@+id/drawRect_rb"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="矩形" />

        <RadioButton
            android:id="@+id/drawRoundRect_rb"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="圓角矩形" />

        <RadioButton
            android:id="@+id/drawLine_rb"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="線" />

        <RadioButton
            android:id="@+id/drawPath_rb"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="路徑" />
    </RadioGroup>

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="152dp"
        android:text="Next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

</androidx.constraintlayout.widget.ConstraintLayout>